# FloatChat Environment Variables
# Copy this file to .env and fill in your API keys

# Application Settings
APP_NAME=FloatChat
APP_VERSION=1.0.0
DEBUG=false

# AI/LLM Services (Required for core functionality)
GROQ_API_KEY=your_groq_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Vector Database (Required for RAG functionality)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=floatchat-knowledge

# Optional AI Services (Backup/Alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Database (Optional - uses in-memory if not provided)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis Cache (Optional - uses in-memory if not provided)
REDIS_URL=redis://user:password@host:port

# Port Configuration (Auto-configured by Render)
PORT=10000
BACKEND_PORT=8000

# Data Sources (Public APIs - No keys required)
ARGO_API_BASE=https://data-argo.ifremer.fr
ERDDAP_BASE=https://www.ifremer.fr/erddap
COPERNICUS_MARINE_BASE=https://marine.copernicus.eu
NOAA_ERDDAP_BASE=https://coastwatch.pfeg.noaa.gov/erddap

# Geospatial Defaults
DEFAULT_BBOX=68.0,6.0,97.0,37.0
DEFAULT_DEPTH_RANGE=0,2000

# Quality Control
ACCEPTED_QC_FLAGS=1,2,5,8

# Visualization
MAP_TILES=OpenStreetMap
DEFAULT_MAP_CENTER=20.0,77.0
DEFAULT_MAP_ZOOM=5
